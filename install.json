{
  "run": [{
    "method": "shell.run",
    "params": {
      "message": "git clone https://github.com/cocktailpeanut/audiocraft.git"
    }
  }, {
    "method": "shell.start",
    "params": {
      "id": "audiogradio.pinokio.conda"
    }
  }, {
    "method": "shell.enter",
    "params": {
      "id": "audiogradio.pinokio.conda",
      "message": "{{os.platform() === 'win32' ? 'conda_hook' : 'eval \"$(conda shell.bash hook)\"'}}",
      "on": [{
        "event": null,
        "return": true
      }]
    }
  }, {
    "method": "shell.enter",
    "params": {
      "id": "audiogradio.pinokio.conda",
      "message": "echo %PATH%",
      "on": [{
        "event": null,
        "return": true
      }]
    }
  }, {
    "method": "shell.enter",
    "params": {
      "id": "audiogradio.pinokio.conda",
      "message": "conda install -y 'ffmpeg<5' -c  conda-forge",
      "on": [{
        "event": null,
        "return": true
      }]
    }
  }, {
    "method": "shell.run",
    "params": {
      "message": "{{os.platform() === 'win32' ? 'python' : 'python3'}} -m venv env",
      "path": "audiocraft"
    }
  }, {
    "method": "shell.start",
    "params": {
      "path": "audiocraft"
    }
  }, {
    "method": "shell.enter",
    "params": {
      "message": "{{os.platform() === 'win32' ? 'env\\\\Scripts\\\\activate' : 'source env/bin/activate'}}",
      "on": [{
        "event": null,
        "return": true
      }]
    }
  }, {
    "method": "shell.enter",
    "params": {
      "message": "pip install 'torch>=2.0'",
      "on": [{
        "event": null,
        "return": true
      }]
    }
  }, {
    "method": "shell.enter",
    "params": {
      "message": "pip install -r {{(os.cpus() && new RegExp('amd','i').test(os.cpus()[0].model) ? 'requirements-no-xformers.txt' : 'requirements.txt')}} -e .",
      "on": [{
        "event": null,
        "return": true
      }]
    }
  }, {
    "method": "input",
    "params": {
      "title": "Install Success",
      "description": "Go back to the dashboard and launch the app!"
    }
  }, {
    "method": "browser.open",
    "params": {
      "uri": "/?selected=audiocraft"
    }
  }]
}
